---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';


export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <div class="wrapper">
    <slot class="header" name="header" />
  <body>
    <slot class="aside aside-1" name="side-nav" />
    <main class="main">
      <slot />
    </main>
    <slot class="footer" name="footer" />
  </body>
  </div>
</html>
