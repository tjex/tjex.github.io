---
export interface Props {
    entry: any;
}

const { entry } = Astro.props;
---

<article class="entry-preview">
    <a href={`/blog/${entry.slug}`}>
        <h1 class="title">{entry.title}</h1>
    </a>
    <p class="description">{entry.description}</p>
</article>

<style>
    a {
        text-decoration: none;
    }

    a:hover > .title {
        text-decoration: underline;
    }

    .post-main__img {
        width: 100%;
        max-width: 600px;
        height: auto;
        margin-bottom: 1rem;
    }

    .title,
    .author,
    .publish-date {
        margin: 0;
    }

    .pub-date,
    .author {
        font-size: 0.8rem;
        color: var(--secondary);
    }

    .title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--theme-text);
    }

    .description {
        color: var(--secondary);
    }
</style>
