---
// post preview component for contact filed as "Blog"
import "../styles/snippets/contentPreview.css";
import Date from "./utility/DateFormat.astro";
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article>
  <tbody>
    <tr>
      <td><a class="preview-title" href={`/blog/${post.slug}`}> {post.title}</a> <br> 
      </td>
      <td style="width: 20%;"><span class="pub-date"><Date date={post.pubDate} format={"MY"} /></span></td>
    </tr>
  </tbody>
</article>
