---
export interface Props {
    post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
    <a href={post.url}>
        {post.image && <img width="720" height="420" class="post-main__img" loading="lazy" src={post.image} alt={post.alt} />}
        <h1 class="title">{post.title}</h1>
        <time class="publish-date">{post.publishDate}</time>
        <p class="teaser">{post.description}</p>
    </a>
</article>

<style>
    a {
        text-decoration: none;
    }

    a:hover > .title {
        text-decoration: underline;
    }

    .post-main__img {
        width: 100%;
        max-width: 600px;
        height: auto;
        margin-bottom: 1rem;
    }

    .title,
    .author,
    .publish-date {
        margin: 0;
    }

    .publish-date,
    .author {
        font-size: 1rem;
        color: var(--secondary);
    }

    .title {
        font-size: 1rem;
        font-weight: 700;
        color: var(--theme-text);
    }

    .teaser {
        color: var(--secondary);
    }
</style>
