---
import site from "../data/settings.js";

export interface Props {
  title: string;
  description: string;
  pubDate: string;
  slug: string;
  cover?: string;
}

const { title, slug, pubDate, cover, description } = Astro.props;

const ldData = {
  "@context": "https://schema.org",
  "@type": "Article",
  publisher: {
    "@type": "Organization",
    name: `${site.rssName} - Blog`,
    url: `${site.url}/blog/`,
  },
  author: {
    "@type": "Person",
    name: `${site.webName}`,
    image: {
      "@type": "ImageObject",
      url: `${site.url}/assets/img/tjex-social-img.jpg`,
      width: 488,
      height: 488,
    },
    url: "https://tjex.net/",
    sameAs: [`${site.url}`, `${site.githubURL}`, `${site.mastodonURL}`],
  },
  headline: `${title}`,
  url: `${site.url}/blog/${slug}`,
  datePublished: `${pubDate}`,
  image: {
    "@type": "ImageObject",
    url: `${site.url}/${cover}`,
    width: 3600,
    height: 1890,
  },
  description: `${description}`,
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": `${site.url}/blog/`,
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(ldData)} is:inline
></script>
