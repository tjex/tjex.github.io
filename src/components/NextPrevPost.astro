---
const { nextPost, prevPost } = Astro.props;
---

<hr />
{
    (
        <div class="neighbourPost">
            {prevPost.data && (
                <a class="prevPost" href={`/posts/${prevPost.slug}`}>
                    {prevPost.data.title}
                </a>
            )}
            {nextPost.data && (
                <a class="nextPost" href={`/posts/${nextPost.slug}`}>
                    {nextPost.data.title}
                </a>
            )}
        </div>
    )
}
