---
// this file generates each post in the "posts" collection.

import Layout from "../../layouts/Post.astro";
import NextPrevPost from "../../components/NextPrevPost.astro";
import { Image } from "astro:assets";
import * as colUtil from "../../scripts/collectionUtil.ts";

export async function getStaticPaths() {
    return colUtil.getAllPostsFromCollection("posts");
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();

const seoTitle = post.data.title;
const seoDescription = post.data.description;

const seo = {
    title: seoTitle,
    description: seoDescription,
};
---

<Layout seo={seo} post={post}>
    <!-- only display image if there is one -->
    {post.data.image && <Image src={post.data.image.src} alt={post.data.image.alt} />}
    <Content />
    <NextPrevPost collection={"posts"} nextPost={nextPost} prevPost={prevPost} />
</Layout>
